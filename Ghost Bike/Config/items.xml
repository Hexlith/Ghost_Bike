
<Ghost_Bike>
	<append xpath="/items">
			<item name="vehicleGhostBikeHandlebars">
				<property name="Extends" value="vehicleMotorcycleHandlebars"/>
				<property name="CustomIcon" value="vehicleMotorcycleHandlebars"/>
				<property name="DegradationBreaksAfter" value="false" />
			</item>


			<item name="vehicleGhostBikeChassis">
				<property name="Extends" value="vehicleMotorcycleChassis"/>
				<property name="CustomIcon" value="vehicleMotorcycleChassis"/>
			</item>

		<item name="vehicleGhostBikePlaceable">
			<property name="Extends" value="vehicleMotorcyclePlaceable"/>
			<property name="CustomIcon" value="vehicleMotorcyclePlaceable"/>
			<property name="CustomIconTint" value="DBE2E9"/>
										<effect_group name="Base Effects">
				<passive_effect name="ModSlots" operation="base_set" value="4"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="350" tags="EconomicValue"/>
				<passive_effect name="DegradationMax" operation="base_set" value="350000"/>
			</effect_group>
		</item>
		
		<item name="vehicleGhostBikeHandlebarsSchematic">
			<property name="Extends" value="vehicleMotorcycleHandlebarsSchematic"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="vehicleMotorcycleHandlebars"/>
			<property name="Unlocks" value="vehicleGhostBikeHandlebars"/>
				<effect_group tiered="false">
			<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleGhostBikeHandlebars" operation="set" value="1"/>
			<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleWheels" operation="set" value="1"/>
			<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="100"/>
				</effect_group>
		</item>
		
		<item name="vehicleGhostBikeChassisSchematic">
			<property name="Extends" value="schematicNoQualityMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="vehicleMotorcycleChassis"/>
			<property name="Unlocks" value="vehicleGhostBikeChassis"/>
				<effect_group tiered="false">
			<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleGhostBikeChassis" operation="set" value="1"/>
			<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleWheels" operation="set" value="1"/>
			<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="100"/>
				</effect_group>
		</item>
	</append>
</Ghost_Bike>

